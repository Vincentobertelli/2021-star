{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": false,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
